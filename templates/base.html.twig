<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header class="site-header" style="background-image: url({{ asset('img/background.jpg') }})">
    <span class="site-title">MVC</span>
    <nav>
    <ul>
        <li><a href="{{ path('home') }}">Home</a></li>
        <li><a href="{{ path('about') }}">About</a></li>
        <li><a href="{{ path('lucky') }}">Lucky number</a></li>
        <li><a href="{{ path('report') }}">Report</a></li>
        <li><a href="{{ path('me') }}">Me</a></li>
    </ul>
</nav>
    </header>
    <div class="container">
        <div class="main-content">
            {% block body %}{% endblock %}
        </div>
    </div>
    </body>
</html>
