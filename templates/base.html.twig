<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
            {% set currentPath = app.request.pathinfo %}
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
            <script src="https://use.fontawesome.com/0aee473986.js"></script>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://kit.fontawesome.com/3477aceca5.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
    <header class="site-header" style="background-image: url({{ asset('img/background.jpg') }})">
    <span class="site-title">MVC</span>
    <nav>
    <ul>
        <li><a class="a_link" href="{{ path('home') }}">Home</a></li>
        <li><a class="a_link" href="{{ path('about') }}">About</a></li>
        <li><a class="a_link" href="{{ path('report') }}">Report</a></li>
        <li><a class="a_link" href="{{ path('me') }}">Me</a></li>
        <li><a class="a_link" href="{{ path('card_start') }}">Card</a></li>
        <li><a class="a_link" href="{{ path('api') }}">Api</a></li>
        <li><a class="a_link" href="{{ path('game_landing') }}">21</a></li>
        <li><a class="a_link" href="{{ path('library') }}">Library</a></li>
        <li><a class="a_link" href="{{ path('metrics') }}">Metrics</a></li>
    </ul>
    <ul>
        <li><a class="a_link" href="{{ path('proj') }}">Adventure Game</a></li>
        <li><a class="a_link" href="{{ path('proj_about') }}">About</a></li>
    </ul>
</nav>
    </header>
    <div class="container">
        <div class="main-content">
            {% block body %}{% endblock %}
        </div>
    </div>
        <footer>
            <a class="a_link" href="https://github.com/emklemkl/mvcreport">Git-repo emklemkl</a>
            <a class="a_link" href="https://github.com/dbwebb-se/mvc">Git-repo Kursen</a>
            <a class="a_link" href="{{ path('clear_session') }}">Reset card hand</a>
            <a class="a_link" href="{{ path('clear_session_game') }}">Reset game 21</a>
            <a class="a_link" href="{{ path('clear_session_game') }}">Reset Adventure</a>
        </footer>
    </body>
</html>
